<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cuteback"
    tools:context=".Aboutus">

    <TextView
        android:layout_width="parent"
        android:layout_height="parent"
        android:text="Bienvenido a este pagina!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/topleft"
        app:layout_constraintEnd_toEndOf="@id/topright"
        app:layout_constraintTop_toTopOf="@id/topupper"
        app:layout_constraintBottom_toTopOf="@id/top"/>
    <TextView
        android:layout_width="parent"
        android:layout_height="parent"
        android:text="Lorem niurbgienrfe kinoin jenfnr rnoern orneoenr rogineroigj erker rnie. BAuLJRNE ENFnee ejne ie ienfeo ejne ocne lenf."
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/textleft"
        app:layout_constraintEnd_toStartOf="@id/textright"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/textupper"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topupper"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topleft"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topright"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textleft"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textright"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textupper"
        android:layout_width="parent"
        android:layout_height="parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

</androidx.constraintlayout.widget.ConstraintLayout>