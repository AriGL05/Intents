<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cuteback"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="36sp"
        android:text=""
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toptext"
        android:text="Intents"/>
    <Button
        android:id="@+id/implicitos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicitos"
        app:layout_constraintTop_toBottomOf="@id/butonstop"
        app:layout_constraintStart_toEndOf="@id/sideleft"
        app:layout_constraintEnd_toStartOf="@id/sideright"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/explicitos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicitos"
        app:layout_constraintTop_toBottomOf="@id/implicitos"
        app:layout_constraintStart_toEndOf="@id/sideleft"
        app:layout_constraintEnd_toStartOf="@id/sideright"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/butonstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80"/>


</androidx.constraintlayout.widget.ConstraintLayout>